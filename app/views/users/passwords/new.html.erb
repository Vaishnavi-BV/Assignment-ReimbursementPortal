<div style="margin: 40px;display: flex;align-items: center;justify-content: center" >
  <div>
    <center><h2 style="padding-bottom: 30px">Forgot your password?</h2></center>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="row g-3 d-flex align-items-center justify-content-center ">
        <div class="col-md-12">
          <%= f.label :email, class: 'form-label'%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
          <% resource.errors.full_messages_for(:email).each do |message| %>
            <p style="color: red"><%= message %></p>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
